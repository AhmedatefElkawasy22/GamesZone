@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <img src="@FileSettings.ImagesPath/@Model.Cover" class="img-fluid game-cover" alt="@Model.Name Cover" width="100%"/>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 game-details">
            <h1 class="mb-3">@Model.Name</h1>
            <span class="badge bg-info mb-3">@Model.Category.Name</span>
            <div class="mt-2 mb-3">
                @foreach (GameDevice device in @Model.Devices)
                {
                    <i class="@device.device.Icon mx-1"></i>
                }
            </div>
            <p class="mt-3 mb-4">@Model.Description</p>
            <div class="mt-4">
                <button id="delete-button" class="btn btn-danger mb-2">
                    <i class="fa-regular fa-trash-can"></i> Delete
                </button>
                <button id="edit-button" class="btn btn-outline-primary mb-2">
                    <i class="fa fa-edit"></i> Edit
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script>
        document.getElementById("delete-button").addEventListener("click", function (event) {
            event.preventDefault();
            Swal.fire({
                title: 'Are you sure you want to delete this game?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#555',
                confirmButtonText: 'Delete',
                customClass: {
                    popup: 'swal-wide'
                },
                background: '#f2f2f2',
                backdrop: `
                    rgba(0,0,0,0.4)
                    left top
                    no-repeat
                `,
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", new { id = Model.Id })';
                }
            });
        });

        document.getElementById("edit-button").addEventListener("click", function (event) {
            event.preventDefault();
            window.location.href = '@Url.Action("Update", new { id = Model.Id })';
        });
    </script>
}

<style>
    .swal2-popup {
    background: rgb(219, 192, 192);
    border-radius: 15px;
    padding: 20px;
    max-width: 600px;
    width: 100%;
}

/* Adding animation to the SweetAlert2 show event */
.swal2-show {
    animation: swal2-show 0.9s;
}

/* Example of customizing the warning icon */
.swal2-icon.swal2-warning {
    border-color: #f8bb86;
    color: #f8bb86;
}

/* Custom animation for SweetAlert2 show event */
@@keyframes swal2-show {
    0% {
        opacity: 0;
        transform: scale(0.7);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}
    .style {
        background: rgb(219 192 192);
        border-radius: 50px;
    }
    .swal-wide {
        width: 600px;
    }
    .swal2-show {
        animation: swal2-show .9s;
    }

    .game-cover {
        transition: transform 1.0s ease-in-out;
    }

    .game-cover:hover {
        transform: scale(1.05);
    }

    .game-details h1 {
        animation: fadeInDown 1s;
    }

    .game-details p {
        animation: fadeInUp 1s;
    }

    .btn {
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    .btn:hover {
        background-color: #17a2b8;
        color: black;
        transform: scale(1.05);
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes swal2-show {
        from {
            opacity: 0;
            transform: scale(0.7);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>
